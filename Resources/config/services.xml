<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="fernando.sprites.java">%fernando.java%</parameter>
        <parameter key="fernando.formula_loader.alias">php_sprite</parameter>
        <parameter key="fernando.cache_dir">%kernel.cache_dir%/fernando</parameter>

        <parameter key="fernando.sprites.info_loader.class">Fernando\Bundle\SpritesBundle\Sprite\Image\ImageInfoLoader</parameter>
        <parameter key="fernando.sprites.packer.class">Fernando\Bundle\SpritesBundle\Packer\PackerGuillotine</parameter>
        <parameter key="fernando.sprites.manager.class">Fernando\Bundle\SpritesBundle\Sprite\SpriteManager</parameter>
        <parameter key="fernando.sprites.css_manager.class">Fernando\Bundle\SpritesBundle\Sprite\CssManager</parameter>
        <parameter key="fernando.sprites.css_templates.class">Fernando\Bundle\SpritesBundle\Templating\CssTemplates</parameter>

        <parameter key="fernando.assetic_filter.sprite.class">Fernando\Bundle\SpritesBundle\Filter\FakeSpriteFilter</parameter>
        <parameter key="fernando.helper.sprite.class">Fernando\Bundle\SpritesBundle\Templating\SpriteHelper</parameter>
        <parameter key="fernando.formula_loader.class">Fernando\Bundle\SpritesBundle\Factory\Loader\SpriteFormulaLoader</parameter>
        <parameter key="assetic.worker.build_sprite.class">Fernando\Bundle\SpritesBundle\Factory\Worker\BuildSpritesWorker</parameter>
    </parameters>

    <services>
        <service id="fernando.sprites.info_loader" class="%fernando.sprites.info_loader.class%">
            <argument type="service" id="fernando.assetic_config_cache" />
        </service>
        <service id="fernando.sprites.packer" class="%fernando.sprites.packer.class%">
            <argument>%fernando.sprites.jar_yml%</argument>
            <argument>%fernando.sprites.jar_packer%</argument>
            <argument>%fernando.sprites.java%</argument>
        </service>
        <service id="fernando.sprites.manager" class="%fernando.sprites.manager.class%">
            <argument type="service" id="fernando.sprites.info_loader" />
            <argument type="service" id="fernando.sprites.packer" />
            <argument type="service" id="fernando.sprites.css_manager" />
            <argument>%kernel.root_dir%</argument>
        </service>
        <service id="fernando.sprites.css_manager" class="%fernando.sprites.css_manager.class%">
            <argument type="service" id="fernando.sprites.css_templates" />
        </service>
        <service id="fernando.sprites.css_templates" class="%fernando.sprites.css_templates.class%" />

        <service id="fernando.assetic_filter.sprite" class="%fernando.assetic_filter.sprite.class%">
            <tag name="assetic.filter" alias="sprite" />
        </service>
        <service id="fernando.helper.sprite" class="%fernando.helper.sprite.class%" scope="request">
            <tag name="templating.helper" alias="fernando" />
            <argument type="service" id="fernando.sprites.info_loader" />
            <argument type="service" id="fernando.sprites.css_templates" />
            <argument>%kernel.root_dir%</argument>
        </service>

        <service id="fernando.assetic_config_cache" class="%assetic.config_cache.class%" public="false">
            <argument>%fernando.cache_dir%/config</argument>
        </service>
        <service id="fernando.php_formula_loader" class="%assetic.cached_formula_loader.class%">
            <tag name="assetic.formula_loader" alias="%fernando.formula_loader.alias%" />
            <tag name="assetic.templating.php" />
            <argument type="service" id="fernando.php_formula_loader.real" />
            <argument type="service" id="fernando.assetic_config_cache" />
            <argument>%kernel.debug%</argument>
        </service>
        <service id="fernando.php_formula_loader.real" class="%fernando.formula_loader.class%">
            <tag name="assetic.templating.php" />
            <argument type="service" id="assetic.asset_factory" />
        </service>
        <service id="assetic.worker.build_sprite" class="%assetic.worker.build_sprite.class%" public="false">
            <tag name="assetic.factory_worker" />
            <argument type="service" id="fernando.sprites.manager" />
        </service>
    </services>
</container>
